{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": {
				"owner": "esbuild",
				"fileLocation": "relative",
				"pattern": [
					{
						"regexp": "^âœ˜ \\[ERROR\\] (.*)$",
						"message": 1
					},
					{
						"regexp": "^\\s*(.*):(\\d+):(\\d+):$",
						"file": 1,
						"line": 2,
						"column": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\[watch\\] build started$",
					"endsPattern": "^\\[watch\\] build finished$"
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "compile",
			"problemMatcher": "$esbuild",
			"group": "build",
			"label": "npm: compile"
		},
		{
			"type": "npm",
			"script": "compile-tests",
			"problemMatcher": "$tsc",
			"group": "build",
			"label": "npm: compile-tests"
		}
	]
}
