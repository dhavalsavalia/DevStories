{
  "name": "devstories",
  "displayName": "DevStories",
  "description": "Lightweight story management for VS Code using markdown files",
  "version": "0.0.1",
  "publisher": "devstories",
  "author": {
    "name": "Dhaval Savalia",
    "email": "hello@dhavalsavalia.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhavalsavalia/DevStories.git"
  },
  "homepage": "https://github.com/dhavalsavalia/DevStories#readme",
  "bugs": {
    "url": "https://github.com/dhavalsavalia/DevStories/issues"
  },
  "keywords": [
    "stories",
    "project-management",
    "markdown",
    "agile",
    "kanban",
    "productivity",
    "task-management"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Notebooks"
  ],
  "activationEvents": [
    "workspaceContains:.devstories",
    "onCommand:devstories.init"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devstories-explorer",
          "title": "DevStories",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "devstories-explorer": [
        {
          "id": "devstories.views.explorer",
          "name": "Stories"
        }
      ]
    },
    "commands": [
      {
        "command": "devstories.init",
        "title": "DevStories: Initialize Project"
      },
      {
        "command": "devstories.createEpic",
        "title": "DevStories: Create Epic"
      },
      {
        "command": "devstories.createStory",
        "title": "DevStories: Create Story"
      },
      {
        "command": "devstories.quickCapture",
        "title": "DevStories: Quick Capture"
      },
      {
        "command": "devstories.saveAsTemplate",
        "title": "DevStories: Save as Template"
      },
      {
        "command": "devstories.changeStatus",
        "title": "DevStories: Change Status"
      },
      {
        "command": "devstories.pickSprint",
        "title": "DevStories: Pick Sprint"
      },
      {
        "command": "devstories.openEpic",
        "title": "Open Epic File"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "devstories.changeStatus",
          "when": "view == devstories.views.explorer && viewItem == story",
          "group": "devstories@1"
        },
        {
          "command": "devstories.changeStatus",
          "when": "view == devstories.views.explorer && viewItem == epic",
          "group": "devstories@1"
        },
        {
          "command": "devstories.openEpic",
          "when": "view == devstories.views.explorer && viewItem == epic",
          "group": "navigation"
        },
        {
          "command": "devstories.saveAsTemplate",
          "when": "view == devstories.views.explorer && viewItem == story",
          "group": "devstories@2"
        }
      ],
      "editor/context": [
        {
          "command": "devstories.saveAsTemplate",
          "when": "resourcePath =~ /\\.devstories\\/stories\\//",
          "group": "devstories@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "devstories.quickCapture",
        "key": "cmd+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "DevStories",
      "properties": {
        "devstories.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm run check-types && npm run lint && node esbuild.js --watch",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:integration": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.3",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "mocha": "^10.4.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.3"
  }
}
